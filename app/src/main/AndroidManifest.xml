<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.egovictoria.bestcounterever">

    <application
        android:allowBackup="true"
        android:icon="@drawable/bce_icon"
        android:label="Best Counter Ever"
        android:roundIcon="@drawable/bce_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.NoActionBar">
        <activity android:name=".Backgrounds" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".CounterListActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>