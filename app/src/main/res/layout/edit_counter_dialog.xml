<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/baseBackground"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/editCounterDialogTitle"
        android:text="Edit Counter"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/baseText"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/exitEditCounterDialogButton"
        android:textColor="@color/baseText"
        android:background="@color/baseBackground"
        android:text="X"
        android:textSize="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/editCounterNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Counter Name"
        android:textSize="24sp"
        android:textStyle="normal"
        android:textColor="@color/baseText"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@id/editCounterNameEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCounterDialogTitle"/>

    <EditText
        android:id="@+id/editCounterNameEditText"
        app:layout_constraintTop_toBottomOf="@+id/editCounterNameTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/editCounterValueTextView"
        android:hint="Enter Counter Name Here"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="@color/baseText"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/editCounterValueTextView"
        app:layout_constraintTop_toBottomOf="@id/editCounterNameEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editCounterValueEditText"
        android:text="Enter New Counter Value"
        android:textSize="24sp"
        android:textStyle="normal"
        android:textColor="@color/baseText"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editCounterValueEditText"
        android:hint="Enter Counter Value Here"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="@color/baseText"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/editCounterValueTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editCounterDialogConfirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintTop_toBottomOf="@id/editCounterValueEditText"
        android:id="@+id/editCounterDialogConfirmButton"
        android:text="Confirm Changes"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="@color/baseText"
        android:background="@drawable/rounded_corners_rectangle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>